#!/usr/bin/env groovy
pipeline {
    agent any

    tools {nodejs "my node"}

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh "echo hello"
                dir("tommasobellini-front") {
                    sh 'npm run build'
                }
                echo 'Built...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                dir("tommasobellini-front") {
                    sh 'npm install -g firebase-tools'
                    sh 'firebase deploy --token $FIREBASE_TOKEN'
                }
                echo 'Deployed'
            }
        }
    }
}